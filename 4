import java.util.ArrayList;

// Classe base Veiculo
class Veiculo {

    // Atributos privados
    private String placa;
    private String marca;
    private String modelo;
    private int ano;
    private double valor;

    // Construtor
    public Veiculo(String placa, String marca, String modelo, int ano, double valor) {
        this.placa = placa;
        this.marca = marca;
        this.modelo = modelo;
        this.ano = ano;
        this.valor = valor;
    }

    // Getters e Setters
    public String getPlaca() {
        return placa;
    }

    public void setPlaca(String placa) {
        this.placa = placa;
    }

    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public int getAno() {
        return ano;
    }

    public void setAno(int ano) {
        this.ano = ano;
    }

    public double getValor() {
        return valor;
    }

    public void setValor(double valor) {
        this.valor = valor;
    }

    // Método para calcular o IPVA (4%)
    public double calcularIpva() {
        return valor * 0.04;
    }

    // Método para exibir informações
    public void exibirInfo() {
        System.out.println("Tipo: Veículo Genérico");
        System.out.println("Placa: " + placa);
        System.out.println("Marca: " + marca);
        System.out.println("Modelo: " + modelo);
        System.out.println("Ano: " + ano);
        System.out.println(String.format("Valor: R$ %.2f", valor));
        System.out.println(String.format("IPVA: R$ %.2f", calcularIpva()));
        System.out.println("--------------------------------");
    }
}

// Classe Carro herdando de Veiculo
class Carro extends Veiculo {

    private int numeroPortas;

    public Carro(String placa, String marca, String modelo, int ano, double valor, int numeroPortas) {
        super(placa, marca, modelo, ano, valor);
        this.numeroPortas = numeroPortas;
    }

    public int getNumeroPortas() {
        return numeroPortas;
    }

    public void setNumeroPortas(int numeroPortas) {
        this.numeroPortas = numeroPortas;
    }

    // IPVA 3.5%
    @Override
    public double calcularIpva() {
        return getValor() * 0.035;
    }

    @Override
    public void exibirInfo() {
        System.out.println("Tipo: Carro");
        System.out.println("Placa: " + getPlaca());
        System.out.println("Marca: " + getMarca());
        System.out.println("Modelo: " + getModelo());
        System.out.println("Ano: " + getAno());
        System.out.println("Número de portas: " + numeroPortas);
        System.out.println(String.format("Valor: R$ %.2f", getValor()));
        System.out.println(String.format("IPVA (3.5%%): R$ %.2f", calcularIpva()));
        System.out.println("--------------------------------");
    }
}

// Classe Moto herdando de Veiculo
class Moto extends Veiculo {

    private int cilindradas;

    public Moto(String placa, String marca, String modelo, int ano, double valor, int cilindradas) {
        super(placa, marca, modelo, ano, valor);
        this.cilindradas = cilindradas;
    }

    public int getCilindradas() {
        return cilindradas;
    }

    public void setCilindradas(int cilindradas) {
        this.cilindradas = cilindradas;
    }

    // IPVA 2.5%
    @Override
    public double calcularIpva() {
        return getValor() * 0.025;
    }

    @Override
    public void exibirInfo() {
        System.out.println("Tipo: Moto");
        System.out.println("Placa: " + getPlaca());
        System.out.println("Marca: " + getMarca());
        System.out.println("Modelo: " + getModelo());
        System.out.println("Ano: " + getAno());
        System.out.println("Cilindradas: " + cilindradas);
        System.out.println(String.format("Valor: R$ %.2f", getValor()));
        System.out.println(String.format("IPVA (2.5%%): R$ %.2f", calcularIpva()));
        System.out.println("--------------------------------");
    }
}

// Classe principal Concessionaria
public class Concessionaria {
    public static void main(String[] args) {

        System.out.println("==== SISTEMA DE VEÍCULOS DA CONCESSIONÁRIA ====");

        // Cria uma lista para armazenar veículos
        ArrayList<Veiculo> veiculos = new ArrayList<>();

        // Adiciona 3 carros
        veiculos.add(new Carro("ABC-1234", "Toyota", "Corolla", 2022, 120000, 4));
        veiculos.add(new Carro("DEF-5678", "Honda", "Civic", 2021, 110000, 4));
        veiculos.add(new Carro("GHI-9012", "Fiat", "Argo", 2020, 75000, 4));

        // Adiciona 2 motos
        veiculos.add(new Moto("JKL-3456", "Yamaha", "Fazer 250", 2021, 22000, 250));
        veiculos.add(new Moto("MNO-7890", "Honda", "CG 160 Titan", 2022, 15000, 160));

        // Exibe todos os veículos
        for (Veiculo v : veiculos) {
            v.exibirInfo();
        }
    }
}
